#ifndef M2_DEBUG_H_
#define M2_DEBUG_H_

#define DEBUG_LEVEL 0

#define DEBUG_TEMP 0

#define M2_DEBUG_TEMP(line); \
    if (DEBUG_TEMP >= 1) \
    cout << "M2_DEBUG TEMP: " << line << endl; 


#define M2_DEBUG1(line); \
    if (DEBUG_LEVEL >= 1) \
    cout << "M2_DEBUG Level 1: " << line << endl; 



#define M2_DEBUG2(line); \
    if (DEBUG_LEVEL >= 2) \
    cout << "M2_DEBUG Level 2: " << line << endl; 



#define M2_DEBUG3(line); \
    if (DEBUG_LEVEL >= 3) \
    cout << "M2_DEBUG Level 3: " << line << endl; 


#endif /*M2_DEBUG_H_*/
